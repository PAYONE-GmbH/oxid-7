{% set sFcPoTemplatePath = oViewConf.fcpoGetActiveThemePath() %}
{% set sFcPoTemplatePath = sFcPoTemplatePath|cat('/fcpo_nosalutation_address.html.twig') %}

<div id="orderAddress">
    <form action="{{ oViewConf.getSslSelfLink() }}" method="post">
        <div class="hidden">
            {{ oViewConf.getHiddenSid()|raw }}
            <input type="hidden" name="cl" value="{{ oView.fcpoGetEditAddressTargetController() }}">
            <input type="hidden" name="fnc" value="{{ oView.fcpoGetEditAddressTargetAction() }}">
        </div>
        <h3 class="section">
            <strong>{{ translate({ ident: "BILLING_ADDRESS" }) }}</strong>
            <button type="submit" class="submitButton largeButton">
                {{ translate({ ident: "EDIT" }) }}
            </button>
        </h3>
        {% include oViewConf->fcpoGetAbsModuleTemplateFrontendPath(sFcPoTemplatePath) %}
    </form>

    <form action="{{ oViewConf.getSslSelfLink() }}" method="post">
        <div class="hidden">
            {{ oViewConf.getHiddenSid()|raw }}
            <input type="hidden" name="cl" value="{{ oView.fcpoGetEditAddressTargetController() }}">
            <input type="hidden" name="fnc" value="{{ oView.fcpoGetEditAddressTargetAction() }}">
        </div>
        <h3 class="section">
            <strong>{{ translate({ ident: "SHIPPING_ADDRESS" }) }}</strong>
            <button type="submit" class="submitButton largeButton">
                {{ translate({ ident: "EDIT" }) }}
            </button>
        </h3>
        {% include oViewConf->fcpoGetAbsModuleTemplateFrontendPath(sFcPoTemplatePath) with {delivadr: oDelAdress} %}
    </form>

    {% if oView.getOrderRemark() %}
        <div class="orderRemarks">
            <h3 class="section">
                <strong>{{ translate({ ident: "WHAT_I_WANTED_TO_SAY" }) }}</strong>
            </h3>
            {{ oView.getOrderRemark()|nl2br }}
        </div>
    {% endif %}
</div>
